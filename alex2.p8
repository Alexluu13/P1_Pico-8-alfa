--star

function create_stars()
 stars={}
 for i=1,20 do
  local new_star={
   x=rnd(128),
   y=rnd(128),
   col=rnd({9,14,15}),
   speed=1+rnd(2)
  }
  add(stars, new_star)
 end
end

function update_stars()
 for s in all(stars) do 
  s.y+=s.speed
  if s.y>128 then
   s.y=0
   s.x=rnd(128)
  end
 end  
end
